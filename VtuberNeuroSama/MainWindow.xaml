<Window x:Class="AriaSama.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aria-Sama | VTuber AI Platform" 
        Height="800" 
        Width="1200"
        Background="#1E1E1E"
        Foreground="#CCCCCC"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Border Grid.Row="0" Background="#252526" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
            <StackPanel Orientation="Horizontal" Margin="10,0" VerticalAlignment="Center">
                <Button Content="File" Margin="0,0,20,0" Background="Transparent" Foreground="#CCCCCC" BorderThickness="0" FontSize="12" Click="FileMenu_Click" Cursor="Hand"/>
                <Button Content="Edit" Margin="0,0,20,0" Background="Transparent" Foreground="#CCCCCC" BorderThickness="0" FontSize="12" Click="EditMenu_Click" Cursor="Hand"/>
                <Button Content="View" Margin="0,0,20,0" Background="Transparent" Foreground="#CCCCCC" BorderThickness="0" FontSize="12" Click="ViewMenu_Click" Cursor="Hand"/>
                <Button Content="Tools" Margin="0,0,20,0" Background="Transparent" Foreground="#CCCCCC" BorderThickness="0" FontSize="12" Click="ToolsMenu_Click" Cursor="Hand"/>
                <Button Content="Help" Background="Transparent" Foreground="#CCCCCC" BorderThickness="0" FontSize="12" Click="HelpMenu_Click" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar -->
            <Border Grid.Column="0" Background="#252526" BorderThickness="0,0,1,0" BorderBrush="#3E3E42">
                <StackPanel Margin="15">
                    <TextBlock Text="EXPLORER" Foreground="#969696" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                    <Button Content="?? VTuber Models" Margin="0,0,0,8" Padding="12,6" Background="#2D2D30" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1" Click="VTuberModels_Click"/>
                    <Button Content="?? Chat" Margin="0,0,0,8" Padding="12,6" Background="#2D2D30" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1" Click="Chat_Click"/>
                    <Button Content="?? Settings" Margin="0,0,0,15" Padding="12,6" Background="#2D2D30" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1" Click="Settings_Click"/>
                    
                    <TextBlock Text="OLLAMA" Foreground="#969696" FontSize="11" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBlock x:Name="OllamaStatus" Text="?? Disconnected" Foreground="#969696" FontSize="10" Margin="0,0,0,10"/>
                    <Button x:Name="DiscoverOllamaBtn" Content="?? Discover" Padding="12,6" Background="#2D2D30" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1" Click="DiscoverOllama_Click"/>
                </StackPanel>
            </Border>

            <!-- Main Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>

                <!-- Chat Area -->
                <Border Grid.Row="0" Background="#1E1E1E" BorderThickness="0,0,0,1" BorderBrush="#3E3E42">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="250"/>
                        </Grid.ColumnDefinitions>

                        <!-- Messages -->
                        <ScrollViewer Grid.Column="0" Background="#1E1E1E" Padding="15">
                            <TextBlock x:Name="ChatMessages" TextWrapping="Wrap" Foreground="#CCCCCC" FontFamily="Consolas" FontSize="11" Text="[INFO] Welcome to Aria-Sama AI Platform&#10;[INFO] Click Discover to find Ollama&#10;"/>
                        </ScrollViewer>

                        <!-- Properties Panel -->
                        <Border Grid.Column="1" Background="#252526" BorderThickness="1,0,0,0" BorderBrush="#3E3E42" Padding="15">
                            <StackPanel>
                                <TextBlock Text="PROPERTIES" Foreground="#969696" FontSize="11" FontWeight="Bold" Margin="0,0,0,15"/>
                                <TextBlock Text="Status" Foreground="#969696" FontSize="10" Margin="0,0,0,5"/>
                                <TextBlock x:Name="ConnectionStatus" Text="?? Offline" Foreground="#CCCCCC" FontSize="11" Margin="0,0,0,15"/>
                                <TextBlock Text="Ollama IP" Foreground="#969696" FontSize="10" Margin="0,0,0,5"/>
                                <TextBox x:Name="OllamaIpInput" Text="192.168.1." Height="28" Padding="8" Background="#1E1E1E" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1" Margin="0,0,0,15"/>
                                <TextBlock Text="Model" Foreground="#969696" FontSize="10" Margin="0,0,0,5"/>
                                <TextBox x:Name="ModelInput" Text="llama2" Height="28" Padding="8" Background="#1E1E1E" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Divider -->
                <Border Grid.Row="1" Height="1" Background="#3E3E42"/>

                <!-- Input Area -->
                <Grid Grid.Row="2" Background="#252526" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ChatInput" Grid.Column="0" Margin="0,0,10,0" Padding="8" Background="#1E1E1E" Foreground="#CCCCCC" BorderBrush="#3E3E42" BorderThickness="1" KeyDown="ChatInput_KeyDown" Text="Type message..."/>
                    <Button x:Name="SendBtn" Grid.Column="1" Content="Send" Padding="12,6" Background="#007ACC" Foreground="White" BorderThickness="0" Click="Send_Click" Cursor="Hand"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
